
# MongoDB Connection String
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/?retryWrites=true&w=majority

# Admin Authentication
ADMIN_PASSWORD=change_this_password
JWT_SECRET=longer_random_string_for_jwt_signing

# Content Security
# 32-byte key for AES-256 encryption (hex or base64 encoded)
CONTENT_ENCRYPTION_KEY=super_secret_key_needs_to_be_32_bytes_long

# Base URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Payment Gateway (MOCK or VERIPAY)
PAYMENT_GATEWAY=VERIPAY

# Veripay Configuration
VERIPAY_API_KEY=your_veripay_api_key
VERIPAY_SECRET_KEY=your_veripay_secret_key
VERIPAY_BASE_URL=https://veripay.site/api/v1

# Mailgun Configuration (for order confirmation emails)
# Get API key from https://app.mailgun.com/app/sending/domains
MAILGUN_API_KEY=your_mailgun_api_key
# Note: Email settings (domain, sender, templates) are configured in Admin Dashboard > Email Settings
